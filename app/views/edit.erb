<h1>Edit Recipe</h1>

<form action="/recipes/<%=@recipe.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>
    <br>Name:<input type="text" name="name" placeholder="name" value="<%= @recipe.name %>">
    <br>Ingredients:<input type="text" name="ingredients" value="<%= @recipe.ingredients %>">
    <br>Cook Time:<input type="text" name="cook_time" placeholder="cook time" value="<%= @recipe.cook_time %>">

  <input type="submit" value="submit">
</form>
